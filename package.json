{
  "name": "design-system",
  "version": "1.0.0",
  "description": "Framework-agnostic Design System â€” CSS build pipeline",
  "private": true,
  "scripts": {
    "clean": "rimraf dist",

    "build:css": "sass scss/ds-preview.scss dist/ds-preview.css --no-source-map --style=expanded",

    "build:css:min": "sass scss/ds-preview.scss dist/ds-preview.min.css --no-source-map --style=compressed",

    "build:postcss": "postcss dist/ds-preview.css --replace && postcss dist/ds-preview.min.css --replace",

    "watch:css": "sass --watch scss/ds-preview.scss:dist/ds-preview.css --source-map",

    "prebuild": "node scripts/validate-tokens.js",

    "build": "npm run clean && npm run build:css && npm run build:css:min && npm run build:postcss",

    "dev": "npm run watch:css"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "rimraf": "^6.0.1",
    "sass": "^1.80.0"
  }
}
